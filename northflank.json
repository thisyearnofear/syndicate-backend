{
    "name": "syndicate-backend",
    "type": "service",
    "build_method": "docker",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "."
    },
    "environment": {
        "NODE_ENV": "production"
    },
    "resources": {
        "cpu": 1,
        "memory": 1024
    },
    "ports": [
        {
            "name": "http",
            "port": 3003,
            "protocol": "http"
        }
    ],
    "healthcheck": {
        "path": "/health",
        "initial_delay_seconds": 10,
        "period_seconds": 30,
        "timeout_seconds": 5,
        "success_threshold": 1,
        "failure_threshold": 3
    }
}